<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="24dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/event_background"
    android:clickable="true"
    android:orientation="vertical"
    android:focusable="true"
    android:gravity="bottom">

    <TextView
        android:id="@+id/event_context"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginRight="24dp"
        android:lineSpacingExtra="8sp"
        android:maxLines="2"
        android:text="this is line 1 \n this is line 2"
        android:textAlignment="center"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:background="@drawable/date_background">

        <ImageButton
            android:id="@+id/event_alarm_image_Button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/alarm"
            android:clickable="true"
            />

        <ImageButton
            android:id="@+id/event_add_image_button"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="12dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:src="@drawable/add_animation" />

        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_weight="0.5"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:text="تاریخ برگزاری"
            android:textAlignment="gravity"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</LinearLayout>